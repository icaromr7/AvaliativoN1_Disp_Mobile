<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:layout_margin="15dp"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        android:text="Menu"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/titulo">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cod"
            />
        <Button
            android:id="@+id/cod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Codificador e decodificador"
            android:background="@drawable/gradient_cod"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ppt"
            />
        <Button
            android:id="@+id/ppt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Pedra - Papel - Tesoura"
            android:background="@drawable/gradient_ppt"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/secret"
            />
        <Button
            android:id="@+id/secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CÃ³digo Secreto"
            android:background="@drawable/gradient_secret"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/random"
            />
        <Button
            android:id="@+id/random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Randomizador"
            android:background="@drawable/gradient_random"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />
    </LinearLayout>
</RelativeLayout>
