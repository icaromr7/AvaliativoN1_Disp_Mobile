<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ppt"
    android:layout_margin="15dp"
    android:background="@drawable/border"
    >


    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        android:text="Pedra Papel Tesoura"
        android:textAlignment="center"
        android:layout_below="@+id/button_back"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha do App:"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/titulo"
        android:textSize="25dp"
        />
    <ImageView
        android:id="@+id/Computador"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/border"
        />
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Computador"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
    <Button
        android:id="@+id/pedra"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/pedra"
        android:text="." />

    <Button
        android:id="@+id/papel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/pedra"
        android:layout_margin="5dp"
        android:text="."
        android:background="@drawable/papel"
        />
    <Button
        android:id="@+id/tesoura"
        android:layout_toRightOf="@+id/papel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background= "@drawable/tesoura"
        android:text="."
        />
    </RelativeLayout>
</RelativeLayout>